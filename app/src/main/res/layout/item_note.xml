<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/student_item_background"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:elevation="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/textNomEtudiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom Ã‰tudiant"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:letterSpacing="0.01"
        android:drawableStart="@drawable/ic_person_outline"
        android:drawablePadding="8dp"
        android:drawableTint="@color/colorPrimary"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/textTitreDevoir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devoir : ..."
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/primary_text"
        android:drawableTint="@color/colorPrimary"
        android:gravity="center_vertical" />


    <TextView
        android:id="@+id/textNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note : 17/20"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/grade_excellent"
        android:textStyle="bold"
        android:background="@drawable/grade_badge_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:drawableStart="@drawable/ic_grade_small"
        android:drawablePadding="6dp"
        android:drawableTint="@color/grade_excellent"
        android:gravity="center_vertical"/>

</LinearLayout>
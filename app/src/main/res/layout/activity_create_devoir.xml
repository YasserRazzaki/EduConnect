<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer un nouveau devoir"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textViewCoursLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisir le cours"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <Spinner
            android:id="@+id/spinnerCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog" />

        <EditText
            android:layout_marginTop="12dp"
            android:id="@+id/editTitreDevoir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titre du devoir"
            android:inputType="text" />

        <EditText
            android:id="@+id/editDescriptionDevoir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editDateEcheance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date d'échéance (JJ/MM/AAAA)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none" />


        <Button
            android:id="@+id/btnValiderDevoir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
